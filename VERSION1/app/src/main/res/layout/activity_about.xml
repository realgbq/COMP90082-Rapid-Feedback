<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:toolbar="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity_About">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_project_about"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:elevation="4dp"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            toolbar:titleTextColor="@color/black"
            app:titleTextAppearance="@style/ActionBarTitle">
        </android.support.v7.widget.Toolbar>

        <ScrollView
            android:layout_below="@id/toolbar_project_about"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:clipToPadding="false">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginEnd="0dp"
                    android:layout_marginBottom="0dp"
                    android:scaleType="centerCrop"
                    android:src="@color/white" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <RelativeLayout
                        android:id="@+id/relativelayout_top_about"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true">

                        <TextView
                            android:id="@+id/textView2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:text="About"
                            style="@style/NewProjectElementTitle" />

                        <View
                            android:id="@+id/divider9"
                            android:layout_width="match_parent"
                            android:layout_height="5dp"
                            android:layout_below="@id/textView2"
                            android:layout_marginTop="10dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:background="@color/colorPrimary" />

                        <TextView
                                android:id="@+id/textView13"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/divider9"
                                android:layout_marginLeft="30dp"
                                android:layout_marginTop="20dp"
                                android:text="Project Name"
                                android:textColor="@color/black"
                                android:textSize="25sp" android:textStyle="bold"/>

                        <TextView
                                android:id="@+id/textView15"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/editText_projectname_inabout"
                                android:layout_marginLeft="30dp"
                                android:layout_marginTop="20dp"
                                android:text="Subject Name"
                                android:textColor="@color/black"
                                android:textSize="25sp" android:textStyle="bold"/>

                        <TextView
                                android:id="@+id/textView16"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/editText_subjectname_inabout"
                                android:layout_marginTop="20dp"
                                android:text="Subject Code"
                                android:layout_marginLeft="30dp"
                                android:textColor="@color/black"
                                android:textSize="25sp" android:textStyle="bold"/>

                        <TextView
                                android:id="@+id/textView17"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/textView_warningMin_Timer"
                                android:layout_marginTop="30dp"
                                android:layout_marginLeft="30dp"
                                android:layout_marginBottom="8dp"
                                android:text="Project Description (optional)"
                                android:textColor="@color/black"
                                android:textSize="25sp" android:textStyle="bold"/>

                        <EditText
                            android:id="@+id/editText_projectname_inabout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/textView13"
                            android:layout_marginLeft="30dp"
                            android:hint="Project Name"
                            android:inputType="text"
                            android:ems="24"
                            android:layout_marginTop="15dp"
                            android:textColor="@color/black"
                            android:textSize="20sp" />

                        <EditText
                            android:id="@+id/editText_subjectname_inabout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/textView15"
                            android:layout_marginLeft="30dp"
                            android:hint="Subject Name"
                            android:textColor="@color/black"
                            android:textSize="20sp"
                            android:ems="24"
                            android:layout_marginTop="15dp"
                            android:inputType="text" />

                        <EditText
                            android:id="@+id/editText_subjectcode_inabout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/textView16"
                            android:layout_marginLeft="30dp"
                            android:layout_marginRight="30dp"
                            android:hint="Subject Code"
                            android:layout_marginTop="15dp"
                            android:ems="24"
                            android:textColor="@color/black"
                            android:textSize="20sp"
                            android:inputType="text" />

                        <EditText
                                android:id="@+id/editText_projectdescription_inabout"
                                android:layout_width="570dp"
                                android:layout_height="200dp"
                                android:layout_below="@id/textView17"
                                android:layout_marginStart="30dp"
                                android:layout_marginLeft="30dp"
                                android:layout_marginTop="15dp"
                                android:background="@drawable/rounded_box"
                                android:gravity="start|top"
                                android:inputType="textMultiLine"
                                android:paddingTop="3dp"
                                android:textSize="20dp"
                                android:drawableBottom="@drawable/project_description_focus"/>

                        <TextView
                                android:id="@+id/textView_duration_inTimer"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/editText_subjectcode_inabout"
                                android:layout_alignParentStart="true"
                                android:layout_marginLeft="30dp"
                                android:layout_marginTop="20dp"
                                android:layout_marginBottom="10dp"
                                android:text="Duration"
                                android:textSize="25sp"
                                android:textColor="@color/black" android:textStyle="bold"/>

                        <TextView
                                android:id="@+id/textView_durationMin_Timer"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="60dp"
                                android:layout_marginTop="15dp"
                                android:layout_below="@id/textView_duration_inTimer"
                                android:text="Minutes"
                                android:textColor="@color/black"
                                android:textSize="22sp"/>

                        <Button
                            android:id="@+id/button_addDurationMin_inTimer"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:layout_below="@id/textView_duration_inTimer"
                            android:layout_toRightOf="@+id/textView_durationMin_Timer"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="15dp"
                            android:background="@drawable/ic_add"
                            android:onClick="addDurationMin" />

                        <EditText
                                android:id="@+id/editText_durationMin_Timer"
                                android:layout_width="50dp"
                                android:layout_height="36dp"
                                android:layout_marginLeft="15dp"
                                android:layout_marginTop="15dp"
                                android:layout_below="@id/textView_duration_inTimer"
                                android:layout_toRightOf="@+id/button_addDurationMin_inTimer"
                                android:ems="10"
                                android:padding="6dp"
                                android:textColor="@color/black"
                                android:textSize="20dp"
                                android:gravity="center"
                                android:inputType="number" android:text="0"
                                android:background="@drawable/rounded_box"/>

                        <Button
                            android:id="@+id/button_durationMinMinus_Timer"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="15dp"
                            android:layout_below="@id/textView_duration_inTimer"
                            android:layout_toRightOf="@+id/editText_durationMin_Timer"
                            android:background="@drawable/ic_delete"
                            android:onClick="minusDurationMin" />

                        <TextView
                                android:id="@+id/textView_durationSec_Timer"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="30dp"
                                android:layout_marginTop="15dp"
                                android:layout_below="@id/textView_duration_inTimer"
                                android:layout_toRightOf="@+id/button_durationMinMinus_Timer"
                                android:text="Seconds"
                                android:textSize="22sp"
                                android:textColor="@color/black"/>

                        <Button
                            android:id="@+id/button_addDurationSec_inTimer"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:layout_below="@id/textView_duration_inTimer"
                            android:layout_toRightOf="@+id/textView_durationSec_Timer"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="15dp"
                            android:background="@drawable/ic_add"
                            android:onClick="addDurationSec" />

                        <EditText
                                android:id="@+id/editText_durationSec_Timer"
                                android:layout_width="50dp"
                                android:layout_height="36dp"
                                android:layout_marginLeft="15dp"
                                android:layout_marginTop="15dp"
                                android:layout_below="@id/textView_duration_inTimer"
                                android:layout_toRightOf="@+id/button_addDurationSec_inTimer"
                                android:ems="10"
                                android:padding="6dp"
                                android:textColor="@color/black"
                                android:textSize="20dp"
                                android:text="0"
                                android:gravity="center"
                                android:background="@drawable/rounded_box"
                                android:inputType="number"/>

                        <Button
                            android:id="@+id/button_durationSecMinus_Timer"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="15dp"
                            android:layout_below="@id/textView_duration_inTimer"
                            android:layout_toRightOf="@+id/editText_durationSec_Timer"
                            android:background="@drawable/ic_delete"
                            android:onClick="minusDurationSec"/>

                        <TextView
                                android:id="@+id/textView_warning_inTimer2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/textView_durationMin_Timer"
                                android:layout_alignParentStart="true"
                                android:layout_marginLeft="30dp"
                                android:layout_marginTop="30dp"
                                android:layout_marginBottom="10dp"
                                android:fontFamily="sans-serif"
                                android:text="Warning"
                                android:textColor="@color/black"
                                android:textSize="25sp" android:textStyle="bold"/>

                        <TextView
                                android:id="@+id/textView_warningMin_Timer"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/textView_warning_inTimer2"
                                android:layout_marginLeft="60dp"
                                android:layout_marginTop="15dp"
                                android:text="Minutes"
                                android:textSize="22sp"
                                android:textColor="@color/black"/>

                        <Button
                            android:id="@+id/button_addWarningMin_inTimer"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:layout_below="@+id/textView_warning_inTimer2"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="15dp"
                            android:layout_toRightOf="@+id/textView_warningMin_Timer"
                            android:background="@drawable/ic_add"
                            android:onClick="addWarningMin" />

                        <EditText
                                android:id="@+id/editText_warningMin_Timer"
                                android:layout_width="50dp"
                                android:layout_height="36dp"
                                android:layout_marginLeft="15dp"
                                android:layout_marginTop="15dp"
                                android:layout_below="@+id/textView_warning_inTimer2"
                                android:layout_toRightOf="@+id/button_addWarningMin_inTimer"
                                android:ems="10"
                                android:padding="6dp"
                                android:textColor="@color/black"
                                android:textSize="20dp"
                                android:text="0"
                                android:gravity="center"
                                android:background="@drawable/rounded_box"
                                android:inputType="number"/>

                        <Button
                            android:id="@+id/button_warningMinMinus_Timer"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:layout_below="@+id/textView_warning_inTimer2"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="15dp"
                            android:layout_toRightOf="@+id/editText_warningMin_Timer"
                            android:background="@drawable/ic_delete"
                            android:onClick="minusWarningMin" />

                        <TextView
                                android:id="@+id/textView_warningSec_Timer"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/textView_warning_inTimer2"
                                android:layout_marginLeft="30dp"
                                android:layout_marginTop="15dp"
                                android:layout_toRightOf="@id/button_warningMinMinus_Timer"
                                android:text="Seconds"
                                android:textColor="@color/black"
                                android:textSize="22sp"/>

                        <Button
                            android:id="@+id/button_addWarningSec_inTimer"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:layout_below="@+id/textView_warning_inTimer2"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="15dp"
                            android:layout_toRightOf="@+id/textView_warningSec_Timer"
                            android:background="@drawable/ic_add"
                            android:onClick="addWarningSec"/>

                        <EditText
                                android:id="@+id/editText_warningSec_Timer"
                                android:layout_width="50dp"
                                android:layout_height="36dp"
                                android:layout_marginLeft="15dp"
                                android:layout_marginTop="15dp"
                                android:layout_below="@+id/textView_warning_inTimer2"
                                android:layout_toRightOf="@+id/button_addWarningSec_inTimer"
                                android:ems="10"
                                android:padding="6dp"
                                android:textColor="@color/black"
                                android:textSize="20dp"
                                android:text="0"
                                android:gravity="center"
                                android:background="@drawable/rounded_box"
                                android:inputType="number"/>

                        <Button
                            android:id="@+id/button_warningSecMinus_Timer"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:layout_below="@+id/textView_warning_inTimer2"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="15dp"
                            android:layout_toRightOf="@+id/editText_warningSec_Timer"
                            android:background="@drawable/ic_delete"
                            android:onClick="minusWarningSec"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="50dp"
                        android:layout_below="@id/relativelayout_top_about" >

                        <Button
                            android:id="@+id/button_next_about"
                            android:layout_width="wrap_content"
                            android:layout_height="36dp"
                            android:layout_marginEnd="50dp"
                            android:layout_marginBottom="50dp"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentBottom="true"
                            android:onClick="nextAbout"
                            android:text="Next"
                            android:textSize="20sp"
                            android:paddingLeft="16dp"
                            android:paddingRight="16dp"
                            android:background="@drawable/ripple_round_button"
                            android:textColor="@color/white" />
                    </RelativeLayout>
                </RelativeLayout>
            </RelativeLayout>
        </ScrollView>
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>