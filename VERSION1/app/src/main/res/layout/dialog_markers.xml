<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/linearlayout_top_invitation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textView_tile_dialog_marker_invitation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:text="Invitation"
                    android:inputType="number"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:paddingTop="10dp"
                    android:paddingStart="16dp"
                    android:textColor="@color/black"/>

                <ProgressBar
                    android:id="@+id/progressbar_marker_invitation"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:paddingTop="10dp"
                    android:layout_marginStart="20dp"
                    android:layout_toEndOf="@id/textView_tile_dialog_marker_invitation"
                    android:layout_centerVertical="true"
                    android:visibility="invisible"/>

            </RelativeLayout>

            <View
                android:id="@+id/divider_dialog_marker_invitation"
                android:layout_width="match_parent"
                android:layout_below="@id/linearlayout_top_invitation"
                android:layout_height="2dp"
                android:background="@color/colorPrimary" />

            <EditText
                android:id="@+id/editText_dialog_marker_invitation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@id/divider_dialog_marker_invitation"
                android:hint="Enter marker ID"
                android:layout_marginLeft="16dp"
                android:textSize="22sp"
                android:ems="20"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:inputType="textPersonName" />

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>