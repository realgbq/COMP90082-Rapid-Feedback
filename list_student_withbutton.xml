<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:descendantFocusability="blocksDescendants"
        android:orientation="horizontal"
        android:layout_margin="5dp">

    <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/black"/>


    <TextView
            android:id="@+id/textView_group_studentswithButton"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="Group No."
            android:layout_weight="4"
            android:layout_gravity="center_vertical|left"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:gravity="left|center_vertical"
            android:padding="5dp" />

        <View
            android:id="@+id/divider22"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/black"/>

        <TextView
            android:id="@+id/textView_studentID_studentsWithButton"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:text="Student ID"
            android:layout_weight="4"
            android:textSize="18sp"
            android:layout_gravity="center_vertical|left"
            android:textColor="@color/black"
            android:gravity="left|center_vertical"
            android:padding="5dp"/>

        <View
            android:id="@+id/divider24"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/black"/>

        <TextView
            android:id="@+id/textView_fullname_studentsWithButton"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:text="Student Name"
            android:layout_weight="12"
            android:layout_gravity="center_vertical|left"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:gravity="left|center_vertical"
            android:padding="5dp"/>

        <View
            android:id="@+id/divider25"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/black"/>

        <TextView
            android:id="@+id/textView_email_studentsWithButton"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:text="Email"
            android:layout_weight="12"
            android:layout_gravity="center_vertical|left"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:gravity="left|center_vertical"
            android:padding="5dp" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/black"/>

        <Button
            android:id="@+id/button_start_studentsWithButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="start"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:layout_gravity="center_vertical|left"
            android:paddingRight="16dp"
            android:paddingLeft="16dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/ripple_round_button"/>

        <TextView
            android:id="@+id/textView_marked_studentsWithButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:gravity="left"
            android:layout_weight="12"
            android:padding="5dp"
            android:text="Marked"
            android:textColor="@color/black"
            android:visibility="gone"
            android:textSize="18sp"
            android:layout_gravity="center_vertical"/>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/black"/>

</LinearLayout>